  <title>Naming Carboxylic Acid Derivatives</title>
  <metadata xmlns:md="http://cnx.rice.edu/mdml">
    <md:title>Naming Carboxylic Acid Derivatives</md:title>
    <md:content-id>m00239</md:content-id>
